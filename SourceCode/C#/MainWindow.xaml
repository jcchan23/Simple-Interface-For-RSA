<Window x:Class="Study.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Study"
        mc:Ignorable="d"
        Title="RSA" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="700*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Content="初始化" x:Name="InitialButton" FontSize="20" Margin="5,30,5,0" FontFamily="Microsoft YaHei UI" Click="InitialButton_Click" Height="80">
            </Button>
            <Button Content="加密" x:Name="Encryption" FontSize="20" Margin="5,30,5,0" FontFamily="Microsoft YaHei UI" Click="Encryption_Click" Height="80">
            </Button>
            <Button Content="解密" x:Name="Decryption" FontSize="20" Margin="5,30,5,0" FontFamily="Microsoft YaHei UI" Click="Decryption_Click" Height="80">
            </Button>
        </StackPanel>
        <Frame Grid.Column="1" Name = "Change_Pages" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
